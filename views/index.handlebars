
<div class="row">
    <div class="col-sm-6">

        <h4 class="center">Ready-To-Eat</h4>
        <ul class="list-group list-margin">
        {{#each burger}}
            {{#unless devoured}}
                <li class="list-group-item">
                    <h1>ID: {{id}}</h1>
                    <p>Name: {{burger_name}}</p>
                    <p>Devoured: {{devoured}}</p>
                    <button class="submit-button" id={{id}}>Devour!</button>
                </li>
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-sm-6">
        <h4 class="center">Devoured!</h4>
        <ul class="list-group list-margin">
            {{#each burger}}
                {{#if devoured}}
                    <li class="list-group-item">
                        <h1>ID: {{id}}</h1>
                        <p>Name: {{burger_name}}</p>
                        <p>Devoured: {{devoured}}</p>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

</div>



<h1>Add A Burger</h1>
<input type="text" id="burgerName" placeholder="Burger Name">
<button id="burger-submit">Submit</button>
